<section class="user-container">
  <h1>New post </h1>
  <%= form_with url: 'create', method: :post, :class => 'main-form', local: true, scope: :post do |f| %>
    <div class="input-container">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>

    <div class="input-container">
      <%= f.label :text %><br>
      <%= f.text_area :text,  :maxlength => 250 %>
    </div>
    <%= f.submit "Create post", :class => 'second-btn'%>
  <% end %>
</section>